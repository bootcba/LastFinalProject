<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/backgroundApp"
    app:theme="@style/AppTheme"
    tools:context="kku.toolmee.bootcbatong.emsvolunteer.profileVolunteer">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

       <!-- <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"

            app:srcCompat="@drawable/regiter" /> -->

             <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"

                android:text="กรุณาตรวจสอบความถูกต้องของข้อมูล"
                android:textColor="#78909C"
                android:textSize="15dp"



            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:background="@drawable/background_page">
            
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                >

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="ชื่อ"
                    android:textColorHint="@color/texthit"
                    android:layout_gravity="center_horizontal"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               android:layout_marginTop="1dp"

                >

                <EditText
                    android:id="@+id/editLastname"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="นามสกุล"
                    android:textColorHint="@color/texthit"
                    android:layout_gravity="center_horizontal"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                >

                <EditText
                    android:id="@+id/editidCard"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="เลขประจำตัวประชาชน"
                    android:textColorHint="@color/texthit" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                >

                <EditText
                    android:id="@+id/editTel"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="เบอร์"
                    android:textColorHint="@color/texthit"
                    android:layout_gravity="center_horizontal"
                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                >

                <EditText
                    android:id="@+id/editAddress"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:hint="ที่อยู่ปัจจุบัน"
                    android:textColorHint="@color/texthit" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/toSetPassword"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"

            android:clickable="true"
            android:text="ตกลง"
            android:textAllCaps="false"
            android:textColor="@color/textButton"
            android:textSize="16dp" />

    </LinearLayout>

    </ScrollView>
</LinearLayout>






