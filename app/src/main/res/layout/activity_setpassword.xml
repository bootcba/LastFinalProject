<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="kku.toolmee.bootcbatong.emsvolunteer.setpassword">

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginStart="3dp">




        <TextView
            android:id="@+id/textView"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="50dp"
            android:text="กรุณาตั้งรหัสผ่านเพื่อเข้าใช้แอปพลิเคชัน"
            android:textColor="#000000"
            android:textSize="16dp"
            android:drawableLeft="@drawable/ic_action_face"

            />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:background="@drawable/background_page"
        android:layout_gravity="center_horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_setPassword1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:textColorHint="@color/textColor"
            >

            <EditText
                android:id="@+id/setPassword1"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:hint="หรัสผ่าน"

                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_setpassword2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="@color/textColor"
            android:layout_marginTop="5dp">

            <EditText
                android:id="@+id/setPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ยืนยันรหัสผ่าน" />
        </android.support.design.widget.TextInputLayout>

        </LinearLayout>



        <Button
            android:id="@+id/buttonPassword"
            style="@style/Base.TextAppearance.AppCompat.Body1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_button"
            android:clickable="true"
            android:padding="10dp"
            android:text="ตกลง"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="16dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/volunteer" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
