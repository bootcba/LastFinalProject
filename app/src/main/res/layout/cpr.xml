<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="21dp"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="ควรกดนวดหัวใจในอัตราความเร็ว"
            android:textAlignment="center"
            android:textColor="#7f0000"
            android:textSize="18sp"

            />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="100 - 120 ครั้ง/นาที"
            android:textAlignment="center"
            android:textColor="#7f0000"
            android:textSize="18sp" />



        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewTimeCPR"
            android:layout_width="349dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="#0069c0"
            android:textSize="34sp"
            android:textStyle="bold" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="289dp"
            android:layout_height="273dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="205dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="291dp"
                    android:layout_height="wrap_content"

                    android:text=" เริ่ม "
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="80sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCircleCPR"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="จำนวนรอบในการกด 2 รอบ"
            android:textAlignment="center"
            android:textColor="#0069c0"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal"></LinearLayout>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="36dp"
            android:layout_weight="0"
            android:background="@drawable/payperclick"
            android:scaleType="fitStart" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="230dp"
            android:layout_height="55dp"
            android:padding="5dp"
            android:text="กด 'เริ่ม' เมื่อทำ CPR "
            android:textAlignment="textStart"
            android:textColor="#002f6c"
            android:textSize="18sp" />
    </LinearLayout>


</LinearLayout>