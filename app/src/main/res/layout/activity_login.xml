<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/backgroundApp"
    tools:context="kku.toolmee.bootcbatong.emsvolunteer.login">
    <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="20dp"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_gravity="center_horizontal"
             android:orientation="vertical">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:padding="16dp"
                app:srcCompat="@drawable/logo" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"

                android:textColorHint="@color/textColor"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:id="@+id/input_name"
                    android:hint="รหัสประจำตัว อฉช."


                    />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColorHint="@color/textColor"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="รหัสผ่าน"
                    android:id="@+id/input_password"
                    />
            </android.support.design.widget.TextInputLayout>




            <Button
                android:id="@+id/loginVolunteer"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_login"
                android:clickable="true"
                android:padding="10dp"
                android:text="เข้าสู่ระบบ"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16dp" />

            <Button
                android:id="@+id/fristLoginVolunteer"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_fristlogin"
                android:clickable="true"
                android:padding="10dp"
                android:text="เข้าสู่ระบบครั้งแรก"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="16dp" />


         </LinearLayout>
     </ScrollView>

</LinearLayout>