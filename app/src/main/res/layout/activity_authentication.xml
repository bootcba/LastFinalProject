<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="@color/backgroundApp"
    app:theme="@style/AppTheme"
    tools:context="kku.toolmee.bootcbatong.emsvolunteer.authentication">


   <LinearLayout
       android:layout_width="314dp"
       android:layout_height="551dp"
       android:layout_marginLeft="3dp"
       android:orientation="vertical"
       android:weightSum="1"
       app:layout_constraintLeft_toLeftOf="parent"
       tools:layout_editor_absoluteY="8dp">




      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="50dp"
          android:text="กรุณากรอกรหัสประจำตัว อฉช.ของท่าน"
          android:textColor="#000000"
          android:textSize="16dp"
          android:drawableLeft="@drawable/ic_action_face"

          />



      <EditText
          android:id="@+id/identityVolunteer"
          android:layout_width="170dp"
          android:layout_height="35dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="30dp"
          android:background="#B3E5FC"
          android:drawablePadding="10dp"
          android:ems="10"
          android:hint="    รหัสประจำตัว อฉช."
          android:inputType="textPersonName"
          android:maxLines="1"
          android:padding="5dp"
          android:textColorHint="#B0BEC5"
          android:textSize="15dp"

          />

      <Button
          android:id="@+id/buttonAuthen"
          style="@style/Base.TextAppearance.AppCompat.Body1"
          android:layout_width="175dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:layout_marginTop="16dp"
          android:background="@drawable/background_button"
          android:clickable="true"
          android:padding="10dp"
          android:text="ตกลง"
          android:textAllCaps="false"
          android:textColor="#fff"
          android:textSize="16dp" />


      <ImageView
          android:id="@+id/imageView2"
          android:layout_width="match_parent"
          android:layout_height="250dp"
          android:layout_marginTop="20dp"
          android:layout_gravity="center_horizontal"
          app:srcCompat="@drawable/volunteer" />


   </LinearLayout>

</android.support.constraint.ConstraintLayout>
